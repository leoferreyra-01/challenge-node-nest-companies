{
  "name": "company-registration-lambda",
  "version": "1.0.0",
  "description": "AWS Lambda function for company registration with business validation",
  "main": "dist/company-registration-lambda.js",
  "scripts": {
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "lambda:dev": "serverless offline start",
    "lambda:deploy": "serverless deploy",
    "lambda:deploy:prod": "serverless deploy --stage prod",
    "lambda:remove": "serverless remove",
    "lambda:logs": "serverless logs -f companyRegistration",
    "lambda:logs:tail": "serverless logs -f companyRegistration --tail",
    "test:lambda": "jest",
    "test:lambda:watch": "jest --watch",
    "test:lambda:coverage": "jest --coverage",
    "test:lambda:integration": "jest --testPathPattern=integration",
    "lint:lambda": "eslint src/aws-lambda/**/*.ts",
    "lint:lambda:fix": "eslint src/aws-lambda/**/*.ts --fix",
    "format:lambda": "prettier --write src/aws-lambda/**/*.ts"
  },
  "keywords": [
    "aws",
    "lambda",
    "serverless",
    "company",
    "registration",
    "validation",
    "nestjs",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "aws-sdk": "^2.1531.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.133",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "serverless": "^3.38.0",
    "serverless-offline": "^13.3.0",
    "serverless-webpack": "^5.13.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-node-externals": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.d.ts",
      "!**/__tests__/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/../$1"
    }
  }
} 